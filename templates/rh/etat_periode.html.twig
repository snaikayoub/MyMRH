{% extends 'base.html.twig' %}

{% block title %}Périodes
	{{ type }}
	– RH
{% endblock %}

{% block body %}
	<div class="container py-4">
		<h2>Périodes de paie :
			{{ type|capitalize }}</h2>

		<table class="table table-striped mt-3 align-middle">
			<thead>
				<tr>
					<th>Période</th>
					<th>Score Équipe</th>
					<th>Score Collectif</th>
					<th>Statut</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for periode in periodes %}
					<tr>
						<form method="post" action="{{ path('rh_periodes_edit', {id: periode.id}) }}">
							<td>{{ periode }}</td>
							<td>
								<input type="number" step="0.01" name="scoreEquipe" class="form-control" value="{{ periode.scoreEquipe ?? '' }}" required>
							</td>
							<td>
								<input type="number" step="0.01" name="scoreCollectif" class="form-control" value="{{ periode.scoreCollectif ?? '' }}" required>
							</td>
							<td>
								<select name="statut" class="form-select" required>
									{% for statut in ['draft', 'submitted', 'service_validated', 'division_validated'] %}
										<option value="{{ statut }}" {% if periode.statut == statut %} selected {% endif %}>
											{{ statut|capitalize|replace({'_': ' '}) }}
										</option>
									{% endfor %}
								</select>
							</td>
							<td>
								<button type="submit" class="btn btn-primary btn-sm">
									<i class="fas fa-save"></i>
									Enregistrer
								</button>
							</td>
						</form>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucune période trouvée.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

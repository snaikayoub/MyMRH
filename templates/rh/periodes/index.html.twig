{% extends 'base.html.twig' %}

{% block title %}Périodes {{ type|capitalize }} – RH{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">
            <i class="fas fa-calendar-alt me-2"></i>
            Périodes de paie : <span class="text-primary">{{ type|capitalize }}</span>
        </h2>
        <a href="{{ path('rh_periodes_index', {type: type == 'mensuelle' ? 'quinzaine' : 'mensuelle'}) }}"
           class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-random"></i> Voir {{ type == 'mensuelle' ? 'quinzaines' : 'mensuelles' }}
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Période</th>
                    <th class="text-center">Score Équipe</th>
                    <th class="text-center">Score Collectif</th>
                    <th class="text-center">Statut</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for periode in periodes %}
                    <tr class="{% if periode.statut == 'Ouverte' %}table-success fw-bold{% endif %}">
                        <td>
                            <span class="badge bg-info text-dark me-2">
                                <i class="far fa-calendar"></i>
                                {{ periode.typePaie|capitalize }} 
                                {{ '%02d'|format(periode.mois) }}/{{ periode.annee }}
                                {% if periode.quinzaine %}<span class="badge bg-secondary ms-1">Q{{ periode.quinzaine }}</span>{% endif %}
                            </span>
                        </td>
                        <td class="text-center">
                            {% if periode.scoreEquipe is not null %}
                                <span class="badge bg-primary">
                                    <i class="fas fa-users"></i> {{ periode.scoreEquipe|number_format(2, ',', ' ') }}
                                </span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            {% if periode.scoreCollectif is not null %}
                                <span class="badge bg-primary">
                                    <i class="fas fa-award"></i> {{ periode.scoreCollectif|number_format(2, ',', ' ') }}
                                </span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            {% set statutColor = 
                                periode.statut == 'Ouverte' ? 'success' : 
                                (periode.statut == 'Fermée' ? 'danger' : 'secondary')
                            %}
                            <span class="badge bg-{{ statutColor }}">
                                {{ periode.statut }}
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('rh_periodes_edit', {id: periode.id}) }}"
                               class="btn btn-outline-primary btn-sm" title="Modifier cette période">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            <i class="fas fa-info-circle"></i> Aucune période trouvée.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

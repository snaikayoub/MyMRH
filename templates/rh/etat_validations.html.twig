{% extends 'base.html.twig' %}

{% block title %}État des validations – RH{% endblock %}

{% block body %}
<div class="container py-4">
    <h2>État des validations par division</h2>
    <ul class="list-group mt-4">
        {% for division in divisions %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ division.nom }}
                <span class="badge bg-primary">
                    {{ division.services|length }} service(s)
                </span>
            </li>
        {% else %}
            <li class="list-group-item">Aucune division enregistrée.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
	<div class="container py-5">
		<h2>Sélection d’un service –
			{{ type|capitalize }}</h2>
		<div class="row mt-4">
			{% for service in services %}
				<div class="col-md-4 mb-3">
					<div class="card h-100">
						<div class="card-body d-flex flex-column justify-content-between">
							<h5 class="card-title">{{ service.nom }}</h5>
							<a href="{{ path('responsable_division_prime_performance', { type: type, serviceId: service.id }) }}" class="btn btn-success mt-3">
								Voir les primes
							</a>
						</div>
					</div>
				</div>
			{% else %}
				<p class="text-center">Aucun service trouvé pour votre division.</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
